{
  "containerEnv": {
    "GH_TOKEN": "${localEnv:DDEV_AGENTS_GH_TOKEN}"
  },
  "remoteEnv": {
    "GH_TOKEN": "${localEnv:DDEV_AGENTS_GH_TOKEN}"
  },
  "name": "Agents: __PROJECT_NAME__",
  "dockerComposeFile": [
    "../.agents/devcontainer-compose.yaml"
  ],
  "service": "agents",
  "workspaceFolder": "/workspace",
  "shutdownAction": "none",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "__NODE_VERSION__"
    },
    "ghcr.io/devcontainers/features/php:1": {
      "version": "__PHP_VERSION__",
      "installComposer": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true
    },
    "ghcr.io/devcontainers/features/copilot-cli:1": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "github.copilot",
        "github.copilot-chat",
        "davidanson.vscode-markdownlint",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "git.enabled": true,
        "workbench.activityBar.visible": true,
        "terminal.integrated.defaultProfile.linux": "zsh",
        "github.copilot.enable": {
          "*": true
        },
        "editor.formatOnSave": true
      }
    },
    "jetbrains": {
      "backend": "PhpStorm",
      "plugins": [
        "org.jetbrains.plugins.github",
        "org.intellij.plugins.markdown",
        "Docker",
        "com.github.copilot"
      ]
    }
  },
  "postAttachCommand": "bash /workspace/.agents/devcontainer-init.sh",
  "remoteUser": "vscode"
}